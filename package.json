{
  "name": "frankenstyle",
  "author": "Reden <reden@franken-ui.dev>",
  "description": "Frankenstyle is a no-buid, lightweight, fully responsive, utility-first CSS framework.",
  "version": "0.1.0-next.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franken-ui/style.git"
  },
  "bugs": {
    "url": "https://github.com/franken-ui/style/issues"
  },
  "homepage": "https://www.franken.style",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build:core": "tsc && vite -c config/core.js build",
    "build:icon": "tsc && vite -c config/icon.js build",
    "build:chart": "tsc && vite -c config/chart.js build",
    "build:runtime": "tsc && vite -c config/runtime.js build"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@tiptap/core": "^3.6.6",
    "@tiptap/extension-character-count": "^3.6.6",
    "@tiptap/extension-link": "^3.6.6",
    "@tiptap/extension-placeholder": "^3.6.6",
    "@tiptap/extension-text-align": "^3.6.6",
    "@tiptap/extension-underline": "^3.6.6",
    "@tiptap/starter-kit": "^3.6.6",
    "apexcharts": "^5.3.5",
    "frankenstyle": "^0.0.12",
    "lit": "^3.3.1",
    "lodash": "^4.17.21",
    "lucide": "^0.545.0",
    "slugify": "^1.6.6",
    "vite": "^7.1.7"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^12.0.3",
    "@types/lodash": "^4.17.20",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "gzip-size": "^7.0.0",
    "lightningcss-cli": "^1.30.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "~5.9.3"
  },
  "exports": {
    ".": {
      "default": "./dist/js/frankenstyle.iife.js"
    },
    "./js/*": {
      "default": "./dist/js/*.js"
    },
    "./css/frankenstyle.css": "./dist/css/frankenstyle.css",
    "./css/frankenstyle-kit.css": "./dist/css/frankenstyle-kit.css"
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config"
    ],
    "rules": {
      "operator-linebreak": "off",
      "arrow-parens": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}

{
  "name": "frankenstyle",
  "author": "Reden <reden@franken-ui.dev>",
  "description": "Frankenstyle is the spiritual successor to Franken UI.",
  "version": "0.1.0-aardvark.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://codeberg.org/FRNKN/style.git"
  },
  "bugs": {
    "url": "https://codeberg.org/FRNKN/style/issues"
  },
  "homepage": "https://www.franken.style",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build:core": "tsc && vite -c config/core.js build",
    "build:components": "tsc && vite -c config/components.js build",
    "build:icon": "tsc && vite -c config/icon.js build",
    "build:chart": "tsc && vite -c config/chart.js build",
    "build:runtime": "tsc && vite -c config/runtime.js build",
    "build:ft-core": "vite -c config/ft-core.js build"
  },
  "dependencies": {
    "@frankenstyle/uikit": "^0.0.3",
    "@tiptap/core": "^3.6.6",
    "@tiptap/extension-character-count": "^3.6.6",
    "@tiptap/extension-link": "^3.6.6",
    "@tiptap/extension-placeholder": "^3.6.6",
    "@tiptap/extension-text-align": "^3.6.6",
    "@tiptap/extension-underline": "^3.6.6",
    "@tiptap/starter-kit": "^3.6.6",
    "@tsparticles/engine": "^3.9.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.9.1",
    "apexcharts": "^4.7.0",
    "lit": "^3.3.1",
    "lodash": "^4.17.21",
    "lucide": "^0.562.0",
    "motion": "^12.28.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "slugify": "^1.6.6",
    "vite": "^7.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@open-wc/eslint-config": "^13.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.25",
    "globals": "^17.0.0",
    "gzip-size": "^7.0.0",
    "lightningcss-cli": "^1.30.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "exports": {
    ".": {
      "default": "./dist/js/frankenstyle.iife.js"
    },
    "./js/*": {
      "default": "./dist/js/*.js"
    },
    "./css/frankenstyle.css": "./dist/css/frankenstyle.css",
    "./css/frankenstyle-kit.css": "./dist/css/frankenstyle-kit.css",
    "./css/chart.css": "./dist/css/chart.css",
    "./css/frankenstyle-kit-standalone.css": "./dist/css/frankenstyle-kit-standalone.css"
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config"
    ],
    "rules": {
      "operator-linebreak": "off",
      "arrow-parens": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
